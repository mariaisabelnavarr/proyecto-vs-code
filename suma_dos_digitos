section  .bss
    num1 resb 1
    num2 res 1
    result resb 1

section  .text
    global _start

_start
    ; "capturar primer digito"
    mov eax, 3
    mov ebx, 0
    mov ecx, num1
    mov edx, 1
    int 0x80
    
    ; "capturar segundo digito"
    mov eax, 3
    mov ebx, 0
    mov ecx, num2
    mov edx, 1
    int 0x80

    ;"convertir caracteres a numeros"
    sub byte [num1], "0"
    sub byte [num2], "0"

    ; "sumar los numero"
    mov al, [num1]
    add al, [num2]
    add al, "0"
    mov [result], al

    ;"mostrar resultado"
    mov eax, 4
    mov ebx, 1
    mov ecx, result
    mov edx, 1
    int 0x80